{
    "Defaults" : {
        "Application" : "PocSimples",
        "SubApplication" : "PocSimplesSub",
        "RunAs" : "workbench",
        "Host" : "workbench",

        "Job": {
            "When" : {
                "Months": ["JAN", "SEP", "DEC"],
                "MonthDays":["22","1","13"],
                "WeekDays":["MON","TUE", "WED", "THU", "FRI"],
                "FromTime":"1643",
                "ToTime":"1644"
            },
            "ActionIfFailure" : {
                "Type": "If",       
                "CompletionStatus": "NOTOK",
                
                "mailToTeam": {
                    "Type": "Mail",
                    "Message": "%%JOBNAME failed",
                    "To": "joaquim@ciandt.com"
                }
            }
        }
    },

    "FlowPOC": {
        "Type": "Folder",
        "Comment" : "PoC do Control-M 9",

        "JobUnico": {
            "Type": "Job:Command",
            "Command": "cd /home/workbench && wget -O my-app-1.0-SNAPSHOT.jar https://github.com/jucaazevedo/my-app/raw/master/target/my-app-1.0-SNAPSHOT.jar && ls -l && /home/ctm/ctm_em/JRE/bin/java -version && /home/ctm/ctm_em/JRE/bin/java -jar my-app-1.0-SNAPSHOT.jar"
        },

        "Flow": {
            "Type": "Flow",
            "Sequence": ["JobUnico"]
        }
    }
}
